@page "/employeedetails/{id}"
@inherits EmployeeDetailBase

<h3>EmployeeDetails</h3>
<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="photo/women.png" />

                <h4>Employee ID : @Employee.Id</h4>
                <h4>Employee Name : @Employee.Name</h4>
                <h4>Email : @Employee.Email</h4>
                <h4>Department : @Employee.DepartmentId</h4>
            </div>
            <div class="card-footer text-center">
                <a href="/" class="btn btn-primary">Back</a>
                <a href="@($"/editemployee/{Employee.Id}")" class="btn btn-primary">Edit</a>
                <button type="button" class="btn btn-danger m-1" onclick="Delete_Click">Delete</button>
            </div>
        </div>
    </div>
</div>




